<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.juborajsarker.passwordmanager.fragments.cloud.BackupFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="1dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">


                <Spinner
                    android:id="@+id/backupSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/catagory"
                    android:layout_gravity="center"
                    android:padding="8dp">


                </Spinner>


            </LinearLayout>

        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="1dp"
            android:background="#f0f0f0">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </android.support.v7.widget.RecyclerView>


        </LinearLayout>


        <android.support.v7.widget.CardView
                android:id="@+id/backup_cardView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardCornerRadius="1dp"
                android:layout_margin="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">



                   <ImageView
                       android:layout_width="50dp"
                       android:layout_height="match_parent"
                       app:srcCompat="@drawable/ic_cloud_upload"
                       android:padding="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Backup to cloud"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="#000"/>



                </LinearLayout>

            </android.support.v7.widget.CardView>




    </LinearLayout>


</LinearLayout>
