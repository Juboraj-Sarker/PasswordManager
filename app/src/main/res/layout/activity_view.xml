<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.juborajsarker.passwordmanager.activity.ViewActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f5f5f5"
            android:padding="5dp">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:orientation="horizontal"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Title:"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/view_title_TV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Facebook"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:layout_weight="3"
                            android:textColor="#2b4eb6"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/view_search_IV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_search"
                            android:padding="5dp"/>

                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:orientation="horizontal"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Email:"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/view_email_TV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="juborajsarker@outlook.com"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:layout_weight="3"
                            android:textColor="#252525"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/view_copy_email_IV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            app:srcCompat="@drawable/ic_copy"/>
                    </LinearLayout>


                </LinearLayout>


            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:orientation="horizontal"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Password:"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/view_password_TV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="123gjsj"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:layout_weight="3"
                            android:textStyle="bold"
                            android:textColor="#000"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/view_copy_IV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            app:srcCompat="@drawable/ic_copy"/>
                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:orientation="horizontal"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Website:"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/view_website_TV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="www.facebook.com"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:layout_weight="3"
                            android:textColor="#2b4eb6"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/view_browse_IV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            app:srcCompat="@drawable/ic_mouse"/>
                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>




                <LinearLayout
                    android:id="@+id/button_LAYOUT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/view_delete_BTN"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorPrimaryDark"
                        android:text="DELETE"
                        android:textSize="16sp"
                        android:textColor="#fff"
                        android:layout_marginRight="5dp"/>

                    <Button
                        android:id="@+id/view_edit_BTN"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorPrimaryDark"
                        android:text="EDIT"
                        android:textSize="16sp"
                        android:textColor="#fff"
                        android:layout_marginLeft="5dp"/>



                </LinearLayout>





        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
